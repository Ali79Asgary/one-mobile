<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/showQuizResultRelativeLayout"
    android:background="@drawable/gradient_selector">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="340dp"
        android:id="@+id/showQuizResultLinearLayout">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_result_quiz"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:id="@+id/showQuizResultImageView"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="گزینه انتخابی شما : "
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="225dp"
        android:id="@+id/yourSelectedSwitchText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/lblYourSelectedSwitch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="گزینه صحیح : "
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/trueSwitchText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="75dp"
        android:id="@+id/lblTrueSwitch"/>

</RelativeLayout>